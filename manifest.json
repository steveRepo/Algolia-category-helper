{
  "manifest_version": 3,
  "name": "Algolia Category Helper",
  "version": "0.2.0",
  "description": "Map numeric/category IDs to labels on Algolia Query Categorization pages using local JSON or Algolia API.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.algolia.net/*",
    "https://*.algolia.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Algolia Category Helper"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://dashboard.algolia.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}